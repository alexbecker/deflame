{
	"manifest_version": 2,
	"name": "Deflame",
	"version": "0.1",

	"description": "Fight flaming on WordPress blogs.",
	"homepage_url": "http://defla.me/",

	"short_name": "Deflame",

	"permissions": [
		"tabs",
		"declarativeContent",
		"<all_urls>"
	],

	"background": {
		"page": "background.html",
		"persistant": false
	},

	"page_action": {
		"default_icon": "handshake.png",
		"default_title": "Deflame"
	},

	"icons": {
		"128": "handshake_large.png"
	}
}
